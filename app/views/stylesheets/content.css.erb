.clear{
	clear:both;
}
.left{
	float:left;
	margin:0 25px 25px 0;
}

.right{
	float:right;
	margin:0 0 25px 25px;
}
#branding {
	padding:<%= @top_margin %>px 0;
}

#branding a#logo{
	display:block;
	margin-left:<%= @side_margin %>px;
}
#branding a#logo:hover{
	border-width:0;
}

#branding #contact-info{
	float:right;
	text-align:right;
	margin-right:<%= @side_margin %>px;
}


.content-section{
	clear:both;
	background:url(/images/section-marker.gif) 50% 100% no-repeat;
}

.content-section{
	/* allow for natural p bottom-margin */
	padding-bottom:<%= @top_margin - 10 %>px;
	margin-bottom:<%= @top_margin %>px;	
}

.content-section img,#content-main h1{
	margin-bottom:<%= @top_margin %>px;
}
.content-section h2{
	margin-bottom:<%= @top_margin %>px;
}
#side-bar .content-section img,#side-bar .content-section h3{
	margin-bottom:5px;
}

.content-section h2 span{
	float:right;
	font-size:0.8em;
}

.error, .required, .glossary-terms span{
	color:<%= @error %>;
}

.glossary-terms li{
	line-height:2em;
}
#glossary-left{
	float:left;
}

#glossary-left li{
	margin-right:30px;
}

/* adjust the title dsplay for designers list */
#content .designer h1{
	margin-bottom:10px;
}

#content .designer h2, #content .employer h2{
	margin:0 0 5px 0;
}

a.external, .external a{
	padding-right:17px;
	background:url(/images/icons/x-link.gif) 100% no-repeat;
}

#content .employer h2{
	margin-bottom:0;
}
.employer h3{
	margin-bottom:5px;
}
textarea.large{
	width:600px;
	height:500px;
}