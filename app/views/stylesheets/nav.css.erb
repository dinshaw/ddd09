.nav{
	text-align:center;
	height:2.5em;
	width:100%;	
}
.nav ul{
	width:<%= @width %>px;
	margin:auto;
	text-align:left;	
}
.nav li{
	float:left;
}

.nav li a{
	color:white;
	float:left;
	display:block;
	padding:0 <%= @side_margin/2 %>px;	
	text-transform:uppercase;
	height:2.5em;
	line-height:2.5em;
}

.nav li a:hover{
	border-width:0;
	text-decoration:underline;
}

.nav li.first a{
	margin:0 <%= @side_margin/2 %>px;
}
.nav li.last a{
	margin:0
}

#nav-main{
	background-color:<%= @dark_green %>;
}

#nav-main li a:hover, #nav-main li.current a{
	background-color:<%= @bg %>;
	color:<%= @text %>;
}

#nav-sub{
	background-color:<%= @bg %>;
}

#nav-sub li a{
		color:<%= @link %>;
}
#nav-sub li a:hover, #nav-sub li.current a{
	background-color:#fff;
	color:<%= @text %>;
}
