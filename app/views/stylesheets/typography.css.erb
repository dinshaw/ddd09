/* = Typography
default font_size / line_height
-----------------------------------------------------------------------------*/
body {
	font-size:80%;
	font-family: Verdana,Georgia, Arial, sans-serif;
	line-height:1.4em;
	color:<%= @text %>;
}

/* =Links */
a{
	color:<%= @link %>;
	text-decoration:none;
	padding-bottom:0.03em;
}
a:hover{
	color:<%= @text %>;
	border-bottom:1px solid <%= @text %>;
	background-color:<%= @link_hover_bg %>;
}

h1, h2, h3 {
	margin:0;
	padding:0;
	color:<%= @title %>;
	font-weight:normal;
	letter-spacing:0.03em;
}

h1{
	font-family: Georgia, times new roman, times, serif;
	font-size:1.7em;	
	margin-bottom:10px;
}

h1 span.note{
	font:0.6em verdana, sans-serif;
}

h2{
	font-size:1.3em;
	line-height:1.7em;
}

h3{
	margin-bottom:5px;
}

h4{
	font-size:1.1em;
}

#side-bar{
	font-size:0.9em;	
}

#content-main p, #content-main li{
	font-size:1.2em;
}
#content-main p,#content-main ul, #content-main ol{
	margin:0 0 <%= @p_bottom %>em;
	line-height:1.7em;
}
#content-main ul li, #content-main ol li{
	line-height:1.7em;
}