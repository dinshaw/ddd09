<% @cms_page.title = "Projects" %>
<p><%= link_to 'New project', new_admin_project_path %></p>


<table>
	<tr>
		<th>Title</th>
		<th>Photo</th>
		<th>Featured</th>
		<th colspan="3">Actions</th>
	</tr>

	<% @projects.each do |project| %>
	<tr>
		<td><%=h project.title %></td>
		<td><%= image_tag project.photo.url(:thumb) %></td>
		<td><%=h is project.featured %></td>
		<td><%= link_to 'Show', admin_project_path(project) %></td>
		<td><%= link_to 'Edit', edit_admin_project_path(project) %></td>
		<td><%= link_to 'Destroy', admin_project_path(project), :confirm => 'Are you sure?', :method => :delete %></td>
	</tr>
	<% end %>
</table>

