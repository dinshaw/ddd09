<h1>Listing comments</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Url</th>
    <th>Comment</th>
    <th>Commentable</th>
    <th>Commentable type</th>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%=h comment.name %></td>
    <td><%=h comment.email %></td>
    <td><%=h comment.url %></td>
    <td><%=h comment.comment %></td>
    <td><%=h comment.commentable_id %></td>
    <td><%=h comment.commentable_type %></td>
    <td><%= link_to 'Show', admin_comment_path(comment) %></td>
    <td><%= link_to 'Edit', edit_admin_comment_path(comment) %></td>
    <td><%= link_to 'Destroy', admin_comment_path(comment), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New comment', new_admin_comment_path %>

